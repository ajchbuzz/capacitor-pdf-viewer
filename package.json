{
  "name": "@jccham/capacitor-pdf-viewer",
  "version": "0.0.8",
  "private": false,
  "description": "Native PDF viewer",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "type": "module",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "JcchamCapacitorPdfViewer.podspec"
  ],
  "author": "jesus-chacon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesus-chacon/capacitor-pdf-viewer"
  },
  "bugs": {
    "url": "https://github.com/jesus-chacon/capacitor-pdf-viewer/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api PDFViewerPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.1.0",
    "@capacitor/core": "^7.1.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/node": "^22.13.11",
    "eslint": "^9.22.0",
    "prettier": "~3.5.3",
    "prettier-plugin-java": "~2.6.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.36.0",
    "swiftlint": "^2.0.0",
    "typescript": "~5.8.2"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
